<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ButtonComponent">
        <attr name="size">
            <enum name="small" value="0"/>
            <enum name="medium" value="1"/>
            <enum name="large" value="2"/>
        </attr>
        <attr name="buttonType" format="enum">
            <enum name="primary" value="0"/>
            <enum name="secondary" value="1"/>
            <enum name="tertiary" value="2"/>
            <enum name="transparent" value="3"/>
            <enum name="danger" value="4"/>
        </attr>
        <attr name="state">
            <enum name="defaultEnabled" value="0"/>
            <enum name="pressed" value="1"/>
            <enum name="loading" value="2"/>
            <enum name="disabled" value="3"/>
        </attr>

        <attr name="icon" />
        <attr name="iconColor" format="reference" />
        <attr name="labelPosition">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="noIcon" value="2"/>
            <enum name="noLabel" value="3" />
        </attr>
        <attr name="android:text" format="string" />
        <attr name="buttonTextColor" format="reference" />
        <attr name="isFontBold" format="boolean" />
    </declare-styleable>

</resources>